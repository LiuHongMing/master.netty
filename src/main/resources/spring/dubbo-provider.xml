<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:provider filter=""/>

    <dubbo:application name="dubbo-provider"/>

    <dubbo:registry protocol="zookeeper" address="localhost:2181"/>
    <dubbo:protocol name="dubbo" port="20880"/>

    <!--<dubbo:reference id="helloServiceRemote" interface="action.rpc.simple.server.HelloServiceRemoteImpl"/>-->

    <dubbo:service interface="action.rpc.simple.server.HelloService" ref="helloServiceLocal" cluster="failover" retries="3">
        <dubbo:method name="hello"/>
    </dubbo:service>

    <bean id="helloServiceLocal" class="action.rpc.simple.server.HelloServiceImpl"/>

</beans>